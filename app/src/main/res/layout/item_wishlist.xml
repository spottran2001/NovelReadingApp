<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardElevation="0dp"
    android:layout_marginStart="17dp"

    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <LinearLayout
            android:id="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/iv_item_product_OptionCart_roundedImage"
                    android:layout_width="170dp"
                    android:layout_height="160dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/wishlist_iv_cover"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp" />
                    <!--                        android:src="@drawable/product_version_adidas_new_second"-->


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wishlist_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="A lot of things"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/wishlist_ibtn_remove"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:src="@drawable/ic_remove_product_cart"
                android:textColor="#777777"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />


        </LinearLayout>

        <TextView
            android:id="@+id/wishlist_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_itemProductCart_sectionOne"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:gravity="center_vertical"
            android:text="Mark Johnson"
            android:textColor="#777777"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/wishlist_tv_totalChapter"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_below="@+id/wishlist_tv_author"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:gravity="center_vertical"
            android:text="199 Chapters"
            android:textColor="#444444"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearlayout_itemProductCart_sectionTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wishlist_tv_totalChapter"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="Chapter"
                android:textColor="#444444"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/wishlist_spinner_dropDownSize"

                    android:layout_width="100dp"
                    android:layout_height="25dp"


                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/border_radius_gray_light"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />

                <ImageButton
                    android:id="@+id/wishlist_btn_dropDown"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="76dp"

                    android:layout_marginTop="7dp"
                    android:background="?android:selectableItemBackground"
                    android:backgroundTint="#777777"
                    android:src="@drawable/ic_drop_down"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/wishlist_roundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_itemProductCart_sectionTwo"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/linearlayout_productCart_addToCart_sectionOne"
            android:backgroundTint="@color/black"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/wishList_btn_read"

                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/navigation_bar_item_viewList_color"

                android:background="?android:selectableItemBackground"

                android:backgroundTint="@android:color/black"
                android:padding="0sp"
                android:text="Continue Reading"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>