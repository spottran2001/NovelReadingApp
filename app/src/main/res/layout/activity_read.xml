<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.read.ReadActivity">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/navigation_bar_home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">




            <ImageButton
                android:id="@+id/read_ib_back"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"

                android:layout_marginTop="0dp"
                android:background="?android:selectableItemBackground"

                android:minWidth="48dp"
                android:src="@drawable/ic_previous"
                tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/read_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:gravity="center_horizontal|center_vertical"
                android:text="TITLE"
                android:textAllCaps="true"
                android:textColor="#333333"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/read_btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Previous"
                android:layout_marginHorizontal="10dp"
                />
            <RelativeLayout
                android:id="@+id/cart_spinner_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_drop_down">

                <Spinner
                    android:id="@+id/read_spinner_chapter"
                    android:layout_width="150dp"
                    android:layout_height="50dp"

                    android:layout_alignParentStart="true"

                    android:layout_marginStart="0dp"
                    android:background="@drawable/border_radius_gray_light"
                    android:spinnerMode="dropdown"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/read_ib_drop"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="20dp"
                    android:background="?android:selectableItemBackground"
                    android:backgroundTint="#777777"
                    android:src="@drawable/ic_drop_down"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

            </RelativeLayout>
            <Button
                android:id="@+id/read_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Next"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/read_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:textSize="16sp"
                android:textColor="#0f0f0f"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/read_btn_previous_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Previous"
                android:layout_marginHorizontal="10dp"
                />
            <RelativeLayout
                android:id="@+id/cart_spinner_cont_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_drop_down">

                <Spinner
                    android:id="@+id/read_spinner_chapter_2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"

                    android:layout_alignParentStart="true"

                    android:layout_marginStart="0dp"
                    android:background="@drawable/border_radius_gray_light"
                    android:spinnerMode="dropdown"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/read_ib_drop_2"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="20dp"
                    android:background="?android:selectableItemBackground"
                    android:backgroundTint="#777777"
                    android:src="@drawable/ic_drop_down"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

            </RelativeLayout>
            <Button
                android:id="@+id/read_btn_next_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Next"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>